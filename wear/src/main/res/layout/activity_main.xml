<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <day.cloudy.apps.wear.settings.WearableSettingListView
        android:id="@+id/settings_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@android:color/white"
        app:circle_border_color="@color/colorAccent"
        app:circle_border_width="1dp"
        app:circle_color="@color/colorPrimaryDark"
        app:circle_padding="8dp"
        app:circle_radius="18dp"
        app:image_tint="@color/colorAccent"/>
</LinearLayout>